<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

  <ImageView
      android:id="@+id/sticker_pack_list_thumbnail"
      android:layout_width="90dp"
      android:layout_height="90dp"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:layout_marginBottom="6dp"
      android:layout_marginStart="@dimen/list_item_side_padding"
      android:layout_marginTop="6dp"
      android:contentDescription=""
      android:scaleType="centerInside"
      tools:src="@mipmap/ic_launcher" />

  <Button
      android:id="@+id/updateButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_centerVertical="true"
      android:layout_marginEnd="@dimen/list_item_side_padding"
      android:layout_marginStart="4dp"
      android:paddingEnd="4dp"
      android:paddingStart="4dp"
      android:minWidth="@dimen/button_min_width"
      android:text="@string/update_button" />

  <RelativeLayout
      android:id="@+id/sticker_pack_list_text_layout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_toStartOf="@id/updateButton"
      android:layout_toEndOf="@id/sticker_pack_list_thumbnail">

      <TextView
          android:id="@+id/sticker_pack_list_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:textColor="@android:color/black"
          android:textSize="24sp"
          tools:text="Title" />

      <TextView
          android:id="@+id/sticker_pack_list_subtitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/sticker_pack_list_title"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:layout_marginTop="2dp"
          android:ellipsize="end"
          android:maxLines="3"
          android:textSize="16sp"
          tools:text="Subtitle" />

  </RelativeLayout>
</RelativeLayout>
