<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DayNightDeleteConfirmationTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccentDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="delete_confirmation_background">@color/generalBackgroundColor</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/generalBackgroundColor</item>
    
        <item name="android:windowLightNavigationBar">true</item>
