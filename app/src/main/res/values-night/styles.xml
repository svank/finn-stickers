<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="AppTheme" parent="AppThemeGlobal">
        <item name="image_placeholder">@drawable/pack_viewer_placeholder_dark</item>
    </style>
    
    <style name="DayNightDeleteConfirmationTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccentDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="delete_confirmation_background">@color/generalBackgroundColor</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
    
    <style name="LightStatusBar" parent="AppTheme">
        <!-- Status bar text/icons are set to be dark programmatically, for compatibility with
        the pop-up image viewer -->
        <!--<item name="android:windowLightStatusBar">true</item>-->
        <item name="android:statusBarColor">@color/transparentStatusBarColor</item>
    </style>
    
    <style name="MainActivityTheme" parent="MainActivityThemeGlobal">
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarColor">@color/mainActivityBackground</item>
    </style>
    
    <style name="ActionBarTheme" parent="ActionBarThemeGlobal">
        <item name="android:statusBarColor">?attr/colorSurface</item>
    </style>
    
    <style name="ColoredToolbarStyle" parent="@style/Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="titleTextAppearance">@style/ToolbarText</item>
    </style>
    
    <style name="OnBoardTheme" parent="AppTheme">
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarColor">?attr/colorPrimarySurface</item>
    </style>
</resources>